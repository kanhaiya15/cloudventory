# Copy this file to .env for local development
# cp .env.example .env

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/aws_inventory?sslmode=disable

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here  # Optional, for temporary credentials

# Application Configuration
APP_ENV=development
LOG_LEVEL=info

# Docker Compose Variables (override in .env file)
POSTGRES_DB=aws_inventory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Optional: AWS Profile (alternative to access keys)
# AWS_PROFILE=default

# Optional: Specific services to run (comma-separated)
# SERVICES=s3,ec2,rds,lambda,dynamodb

# Optional: Parallel execution (true/false)
PARALLEL_EXECUTION=true

# Optional: Database connection pool settings
DB_MAX_OPEN_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=25
DB_CONNECTION_MAX_LIFETIME=5m